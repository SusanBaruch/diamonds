<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h2>Choose your very own beautiful jewelry!</h2>
            <p>
                <a class="btn btn-primary btn-lg" href="/diamonds/new">Add A Style</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div clas="col-lg-12">
            <h3 id="light-color">Or choose from our most beautiful diamond rings</h3>
        </div>        
    </div>

<div class="row text-center" style="display:flex; flex-wrap:wrap">
    <!-- database changes Diamond to diamonds  -->   
    <% diamonds.forEach(function(diamond){ %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
           <img src="<%= diamond.image %>" >
           <div class="caption">
               <h4> <%= diamond.name %> </h4>
           </div>
           <p><a href="/diamonds/<%= diamond._id %>" class="btn btn-primary">Description</a></p>
        </div>
    </div>
    <% }); %>
</div>
</div>

<% include ../partials/footer %>

