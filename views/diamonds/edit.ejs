
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=diamond.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/diamonds/<%= diamond._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" size="50" name="diamond[name]" value="<%=diamond.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" size="50" name="diamond[image]" value="<%=diamond.image %>">  
                </div>                
               <div class="form-group">
                    <input class="form-control" type="text" size="50" name="diamond[description]" value="<%=diamond.description %>">  
                </div>        
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        <a href="/diamonds">Back</a>
    </div>
</div>

<% include ../partials/footer %>
